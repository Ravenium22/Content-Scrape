# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Guild (Server) ID
GUILD_ID=123456789012345678

# Discord Channel IDs
CHANNEL_ID_1=123456789012345678
CHANNEL_ID_2=987654321098765432

# MongoDB Config
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/twitterlinks?retryWrites=true&w=majority
DATABASE_NAME=twitterlinks
COLLECTION_NAME=links


# Set to true to enable scraping from a specific date
ENABLE_HISTORICAL_SCRAPING=true

# Date to start scraping from (formats: YYYY-MM-DD or YYYY-MM-DD HH:mm:ss)
# Examples: 2024-01-01 or 2024-01-01 12:30:00
SCRAPE_FROM_DATE=2025-01-01

# scraping settings (optional)
# Number of messages to fetch per batch (default: 100)
BATCH_SIZE=100

# Delay between batches in milliseconds to avoid rate limits (default: 1000)
DELAY_BETWEEN_BATCHES=1000

# Test mode - set to true to run without database (for testing)
TEST_MODE=true